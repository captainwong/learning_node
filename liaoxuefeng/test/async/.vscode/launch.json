    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/sum.js",
            "cwd":"${workspaceFolder}",
            "runtimeArgs": [
                "--nolazy"
            ],
            "env":{
                "NODE_ENV": "development"
            },
        },
        {
            "name": "Test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "stopOnEntry": false,
            "args": [],
            "cwd":"${workspaceFolder}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env":{
                "NODE_ENV": "test",
            },
            "sourceMaps": false,
            
        }
    ]
}